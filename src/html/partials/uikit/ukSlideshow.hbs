<div data-uk-slideshow="animation: fade; {{#if autoplay}} autoplay: true; autoplay-interval: 4096;{{/if}} ratio: 16:9" id="uk-slideshow-{{#if id}}{{ida id}}{{else}}{{page.name}}{{/if}}">
	<div class="uk-position-relative uk-visible-toggle uk-light">
		<ul class="uk-slideshow-items"{{#if lightbox}} data-uk-lightbox="animation: fade"{{/if}} data-uk-scrollspy="cls: uk-animation-slide-bottom-small">
		{{#each items}}
			{{#with this}}
			<li {{#if background}}data-uk-img style="background-image: url('./img/{{background}}')" class="uk-background-cover uk-border-circle"{{/if}}>
				<a href="{{href}}" class="uk-position-center"{{#if alt}} data-alt="{{alt}}"{{/if}}{{#if caption}} data-caption="<div>{{{caption}}}</div>"{{/if}}>
					<img src="{{src}}" alt="{{default alt ""}}" width="{{width}}" height="{{height}}" loading="lazy">
				</a>
				{{#if caption}}<div class="uk-overlay uk-background-secondary uk-overlay-primary uk-position-bottom uk-padding-small uk-text-center uk-transition-slide-bottom">{{{caption}}}</div>{{/if}}
			</li>
			{{/with}}
		{{/each}}
		</ul>
		<a href="#" data-uk-slidenav-previous aria-label="previous" data-uk-slideshow-item="previous" class="uk-border-circle uk-flex uk-flex-center"></a>
		<a href="#" data-uk-slidenav-next aria-label="next" data-uk-slideshow-item="next" class="uk-border-circle uk-flex uk-flex-center"></a>
	</div>
    {{#if caption}}
        <div class="uk-text-center uk-margin-small-top">
            <span class="uk-text-small">Test caption</span>
        </div>
    {{/if}}
</div>
